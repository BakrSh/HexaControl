@model HexaControl.ViewModel.HexaPageData
@{
    ViewData["Title"] = "BlogDetails";
}


<section id="blog" class="blog mt-5">
    <div class="container mt-5">

        <div class="row mt-5  justify-content-between">
            <div class="col-md-5">
                <img src="@Url.Content($"~/AllFiles/BlogsFiles/{Model.Blog.MainName}")" class="img-fluid image-blog-page-single" />
            </div>
            <div class="col-md-7 mt-3">
                <div class="d-flex flex-row">
                    <div>
                        <p class="style-title-blog-single">
                            @Model.Blog.MainArticle
                        </p>
                    </div>
                    <div class="mx-1">
                        <button onclick="copyToClipboard()" class="style-btn-blog-share" style="border:none">

                            

                                <span class="style-name-btn-share"> مشاركة</span>
                                <span>
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" clip-rule="evenodd"
                                              d="M8.75377 12.149L10.5248 20.118C10.7458 21.111 12.0648 21.325 12.5878 20.453L20.8368 6.704C21.2878 5.954 20.7478 5 19.8728 5H4.32177C3.31877 5 2.81677 6.212 3.52577 6.921L8.75377 12.149Z"
                                              stroke="#282828" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                        <path d="M20.84 5.56006L8.75 12.1501" stroke="#282828" stroke-width="1.5" stroke-linecap="round"
                                              stroke-linejoin="round" />
                                    </svg>
                                </span>
                            
                        </button>
                    </div>
                </div>
                <div class="d-flex flex-row">
                    <div class="mx-1">
                    </div>
                    <div class="mx-1">
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="mx-1">
                        <p class="style-text-blog-single">
                            @Model.Blog.DeclarativeParagraph
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row  justify-content-between">
            <div class="col-md-12 mt-4">

                <div class="d-flex flex-row mt-3">
                    <div class="mx-1">
                        <p class="style-text-blog-single">
                            @Model.Blog.FirstParg

                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row  justify-content-between mx-0">
            <div class="col-md-12">
                <img src="@Url.Content($"~/AllFiles/BlogsFiles/{Model.Blog.firstName}")" class="img-fluid style-imag-banner-blog-single">
            </div>
        </div>
        <div class="row mt-5  justify-content-between">

            <div class="col-md-6 mt-3">

                <div class="d-flex flex-row mt-3">
                    <div class="mx-1">
                        <p class="style-text-blog-single-bottom">
                            @Model.Blog.SecondParg
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <img src="@Url.Content($"~/AllFiles/BlogsFiles/{Model.Blog.SecondName}")" class="img-fluid image-blog-page-single" />
            </div>
        </div>


        <div class="row mt-5 mb-3 justify-content-center">
            <div class="col-md-4 text-center">
                <div class="d-flex flex-row justify-content-center ">
                    <div>
                        <svg width="79" height="79" viewBox="0 0 79 79" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M51.4229 14.2944C52.875 14.2827 54.2193 15.0589 54.9352 16.3222L60.8136 26.6958L66.8582 36.9735C67.5944 38.2251 67.5944 39.7774 66.8582 41.0291L60.8136 51.3067L54.9352 61.6803C54.2193 62.9437 52.875 63.7198 51.4229 63.7082L39.4999 63.6122L27.5769 63.7082C26.1249 63.7198 24.7805 62.9437 24.0646 61.6803L18.1863 51.3067L12.1416 41.0291C11.4055 39.7774 11.4055 38.2251 12.1416 36.9735L18.1863 26.6958L24.0646 16.3222C24.7805 15.0589 26.1249 14.2827 27.5769 14.2944L39.4999 14.3904L51.4229 14.2944Z" fill="#37CCAB" />
                            <path d="M33.8318 39L40.9151 46.0833" stroke="#323232" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M46.5818 31.9167L40.2068 38.2917" stroke="#323232" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M33.8319 46.0833L26.7485 39" stroke="#323232" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M52.2486 34.75L40.9153 46.0833L32.4153 37.5833" stroke="#323232" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>



                    </div>
                    <div class="pt-2">
                        <p class="style-Title-sections ">
                            إقرأ أكثر حول هكسا
                        </p>
                    </div>

                </div>
            </div>
        </div>
        <div class="row list-wrapper justify-content-center">

            @foreach (var item in Model.Blogs)
            {

                @if (item.isChecked == true)
                {
                    <div class="col-lg-4 my-2  col-md-6  ">
                        <div class="box-blog-page" data-aos="fade-up" data-aos-delay="100">
                            <div class="d-flex flex-column">
                                <div class="my-2">
                                    <img src="@Url.Content($"~/AllFiles/BlogsFiles/{item.MainName}")" class="img-fluid style-image-blog-card" alt="">
                                </div>
                                <div class="my-2">
                                    <h4 class="style-title-blog-card">
                                        @item.MainArticle
                                    </h4>
                                </div>

                            </div>
                            <div class="d-flex flex-row">
                                <div class="mx-1">
                                </div>
                                <div class="mx-1">
                                    <span>
                                        <a asp-action="BlogDetails" asp-route-id="@item.Id" class="text-read-more">
                                            <span style="color:black">إقرأ أكثر</span>
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="non" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M4.00977 11.98H18.9998" stroke="black" stroke-width="1.5" stroke-linecap="round"
                                              stroke-linejoin="round" />
                                                <path d="M10.013 5.98798L4.00195 12L10.013 18.012" stroke="black" stroke-width="1.5"
                                              stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>

                                        </a>
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            }






        </div>





    </div>


</section><!-- End Blog Section -->
@section Scripts{

    <script>

        function copyToClipboard() {
            var copyText = window.location.href;
            navigator.clipboard.writeText(copyText);
            alert("URL copied to clipboard!");
        }

    </script>
 }