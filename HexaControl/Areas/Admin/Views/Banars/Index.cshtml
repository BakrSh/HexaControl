@model IEnumerable<HexaControl.Models.Banar>

@{
    ViewData["Title"] = "Index";
}

<h1 dir="rtl">Index</h1>

<p dir="rtl">
    <a asp-action="Create" dir="rtl"  class="btn btn-success"> انشاء</a>
</p>
<table class="table" dir="rtl">
    <thead>
        <tr>
            <th style="max-width:100px">
                @Html.DisplayNameFor(model => model.Prgraph)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
               Icon
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="max-width:100px">
                <a style="max-width:100px">   @Html.DisplayFor(modelItem => item.Prgraph) </a>
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <img src="@Url.Content($"~/AllFiles/BanarFiles/{item.FileName}")" style="width:150px;height:50px" />
            </td>
            <td >
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger"><i class="bi bi-trash">حذف</i></a>|
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark"><i class="bi bi-eye-fill">تفاصيل</i>  </a> |
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"> تعديل</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
